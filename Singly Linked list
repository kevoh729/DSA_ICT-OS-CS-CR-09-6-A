package linkedlist;

public class Singlelinkedlist {
Node head;
Singlelinkedlist() {
	head = null;
}


void insertAtBeginning(int data) {
	Node newnode = new Node(data);
	Node head = null;
	newnode.next = head;
	head = newnode;
	}

void insertAtEnd(int data) {
	Node newNode = new Node(data);
	if (head == null) {
		head = newNode;
		return;
	}
	
	Node temp = (Node) head;
	while(temp.next != null) {
		temp = temp.next;
	}
	temp.next = newNode;
}


void deleteFromBeginning() {
	if (head == null) {
		System.out.println("List is empty");
		return;
			
	}
	head = head.next;
}


void deleteFromEnd() {
	if (head == null) {
		System.out.println("List is empty");
		return;
	}
	
	if(head.next == null) {
		head = null;
		Node temp = head;
		while(temp.next.next != null) {
			temp = temp.next;
			
		}
		temp.next = null;
	}
}
boolean search(int key) {
	Node temp = head;
	while (temp != null) {
		if(temp.data == key) {
			return true;
		}
		temp = temp.next;
	}
	return false;
}
void display() {
	Node temp = head;
	while(temp != null) {
		System.out.println(temp.data + "-->");
		temp = temp.next;
	}
	System.out.println("Null");
}



}

